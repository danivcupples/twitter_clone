<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="profile-picture">
    <% if current_user.avatar.blank? == false %>
      <%= image_tag current_user.avatar.url, size:35, class: "img img-circle" %>
    <% end %>
  </div>

  <div class="form-group tweet-box">
    <%= form.text_field :message, id: :tweet_message, placeholder: "What's happening?", class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Tweet It!", class: "btn btn-primary"%>
  </div>

  <div class="form-group">
    <%= form.hidden_field :user_id, value: current_user.id, class: "form-control" %>
  </div>

<% end %>
